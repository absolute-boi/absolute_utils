{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist/lib/es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@lib": ["./src"],
      "@lib/*": ["./src/*"],
      "@spec": ["./spec"],
      "@spec/*": ["./spec/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["src/**/*", "spec/**/*"]
}
